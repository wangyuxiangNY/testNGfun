<suite name="Test IHEART In grid" parallel="methods" verbose="1" thread-count="4">

   
    <test name="Test in Mac/Firefox">
    	<parameter name="platform" value="mac"/>
    	<parameter name="browser" value="firefox"/>
       	 	<classes>
        		<class name="com.buxie.selenium.testNGfun.GridTest"/>
